# Service Configuration
SERVICE_NAME=analytics-processor-service
ENV=development
HTTP_PORT=8000

# Kafka Configuration
KAFKA_BOOTSTRAP=localhost:9092
KAFKA_GROUP_ID=voc-processor
KAFKA_TOPICS=voc.calls,voc.actions,voc.metrics,conversations.events
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_RECORDS=500

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=serphona_analytics
CLICKHOUSE_SECURE=false

# Batch Processing Configuration
BATCH_SIZE=500
BATCH_FLUSH_SECONDS=2.0
BATCH_MAX_RETRIES=3

# NLP Configuration
NLP_ENABLED=true
NLP_SENTIMENT_MODEL=rule-based
NLP_CACHE_ENABLED=true
NLP_BATCH_SIZE=100

# ML Inference Service (optional)
ML_INFERENCE_URL=http://localhost:8001
ML_INFERENCE_ENABLED=false
ML_INFERENCE_TIMEOUT=5

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=5
REDIS_CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9096

# Worker Configuration
WORKER_THREADS=4
WORKER_SHUTDOWN_TIMEOUT=30

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TOPIC_CLASSIFICATION=false
ENABLE_ENTITY_EXTRACTION=false
ENABLE_LANGUAGE_DETECTION=true

# Performance Tuning
MAX_MEMORY_MB=2048
ASYNCIO_DEBUG=false
