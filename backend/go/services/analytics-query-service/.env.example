# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8084
GRPC_PORT=9094
ENV=development

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=serphona_analytics
CLICKHOUSE_MAX_OPEN_CONNS=10
CLICKHOUSE_MAX_IDLE_CONNS=5
CLICKHOUSE_CONN_MAX_LIFETIME=5m

# Redis Configuration (for caching query results)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3
REDIS_CACHE_TTL=300

# Kafka Configuration (optional, for real-time updates)
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=analytics-query
KAFKA_TOPICS=analytics.updates

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=serphona-auth
JWT_AUDIENCE=serphona-api

# Tenant Manager Integration
TENANT_MANAGER_URL=http://localhost:8082

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
METRICS_PORT=9094
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Query Configuration
QUERY_MAX_ROWS=10000
QUERY_TIMEOUT=30s
QUERY_ENABLE_CACHE=true
QUERY_CACHE_TTL=5m

# Analytics Configuration
ANALYTICS_DEFAULT_TIME_RANGE=7d
ANALYTICS_MAX_TIME_RANGE=90d
ANALYTICS_AGGREGATION_INTERVAL=1h

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Feature Flags
ENABLE_REALTIME_QUERIES=false
ENABLE_EXPORT=true
ENABLE_CUSTOM_QUERIES=false
