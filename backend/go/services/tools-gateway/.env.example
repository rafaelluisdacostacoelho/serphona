# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8085
GRPC_PORT=9095
ENV=development

# Database Configuration (for tool registry and configs)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/serphona_tools?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=serphona_tools
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=4

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=tools-gateway
KAFKA_TOPICS=tools.invocations,tools.results

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=serphona-auth
JWT_AUDIENCE=serphona-api

# External APIs Configuration
# Google APIs
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-search-engine-id

# Weather API
OPENWEATHER_API_KEY=your-openweather-api-key

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@serphona.com

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Billing Integration
BILLING_SERVICE_URL=http://localhost:8081
ENABLE_CREDIT_CONSUMPTION=true
CREDIT_COST_PER_TOOL_CALL=1

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
METRICS_PORT=9095
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Tool Configuration
TOOL_TIMEOUT=30s
TOOL_MAX_RETRIES=3
TOOL_RETRY_DELAY=1s

# Rate Limiting (per tenant)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Feature Flags
ENABLE_GOOGLE_SEARCH=true
ENABLE_WEATHER=true
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_SLACK=false
ENABLE_WEB_SCRAPING=false
ENABLE_CALENDAR=false
