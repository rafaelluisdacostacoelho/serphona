# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
GRPC_PORT=9092
ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/serphona_tenants?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=serphona_tenants
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=tenant-manager
KAFKA_TOPICS=tenants.events,tenants.lifecycle

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=serphona-auth
JWT_AUDIENCE=serphona-api

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Feature Flags
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=false
