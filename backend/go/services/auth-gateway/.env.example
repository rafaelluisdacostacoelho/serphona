# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=serphona_auth
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_DURATION=15m
JWT_REFRESH_TOKEN_DURATION=168h

# Google OAuth Configuration
OAUTH_GOOGLE_ENABLED=false
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/google/callback

# Microsoft OAuth Configuration
OAUTH_MICROSOFT_ENABLED=false
OAUTH_MICROSOFT_CLIENT_ID=your-microsoft-client-id
OAUTH_MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
OAUTH_MICROSOFT_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/microsoft/callback

# Apple OAuth Configuration  
OAUTH_APPLE_ENABLED=false
OAUTH_APPLE_CLIENT_ID=your-apple-client-id
OAUTH_APPLE_CLIENT_SECRET=your-apple-client-secret
OAUTH_APPLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/apple/callback

# Redis Configuration (optional, for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
