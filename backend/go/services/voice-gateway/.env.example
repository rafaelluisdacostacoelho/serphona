# Service Configuration
SERVICE_NAME=voice-gateway
VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=info

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_GRPC_PORT=9090
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s
SERVER_SHUTDOWN_TIMEOUT=30s

# Asterisk Configuration
ASTERISK_ARI_URL=http://localhost:8088/ari
ASTERISK_ARI_USERNAME=asterisk
ASTERISK_ARI_PASSWORD=asterisk_secret
ASTERISK_ARI_APP_NAME=serphona
ASTERISK_AMI_HOST=localhost
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USERNAME=admin
ASTERISK_AMI_PASSWORD=admin_secret

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CALL_STATE_TTL=1h

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=serphona
KAFKA_GROUP_ID=voice-gateway
KAFKA_ENABLE_IDEMPOTENCE=true

# Tenant Manager Configuration
TENANT_MANAGER_URL=http://localhost:8081
TENANT_MANAGER_TIMEOUT=10s

# Agent Orchestrator Configuration
AGENT_ORCHESTRATOR_URL=http://localhost:8082
AGENT_ORCHESTRATOR_TIMEOUT=30s

# Speech-to-Text Providers
# Google
GOOGLE_STT_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_STT_PROJECT_ID=your-project-id

# Azure
AZURE_STT_SUBSCRIPTION_KEY=your-azure-key
AZURE_STT_REGION=eastus

# AWS
AWS_STT_REGION=us-east-1
AWS_STT_ACCESS_KEY_ID=your-access-key
AWS_STT_SECRET_ACCESS_KEY=your-secret-key

# OpenAI Whisper
OPENAI_API_KEY=sk-your-openai-key

# Text-to-Speech Providers
# Google
GOOGLE_TTS_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_TTS_PROJECT_ID=your-project-id

# Azure
AZURE_TTS_SUBSCRIPTION_KEY=your-azure-key
AZURE_TTS_REGION=eastus

# AWS Polly
AWS_POLLY_REGION=us-east-1
AWS_POLLY_ACCESS_KEY_ID=your-access-key
AWS_POLLY_SECRET_ACCESS_KEY=your-secret-key

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-key

# Audio Processing
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=pcm
AUDIO_BUFFER_SIZE=8192

# Call Configuration
MAX_CONCURRENT_CALLS=1000
CALL_TIMEOUT=30m
SILENCE_TIMEOUT=5s
MAX_CONVERSATION_TURNS=100

# Metrics
METRICS_PORT=9091
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Feature Flags
ENABLE_CALL_RECORDING=true
ENABLE_TRANSCRIPTION_STORAGE=true
ENABLE_AUDIO_STREAMING=true
