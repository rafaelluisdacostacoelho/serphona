# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/serphona_billing?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=serphona_billing
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Redis Configuration (for wallet and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=billing-service
KAFKA_TOPICS=billing.events,payments.webhooks,subscriptions.events

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=serphona-auth
JWT_AUDIENCE=serphona-api

# Tenant Manager Integration
TENANT_MANAGER_URL=http://localhost:8082

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Observability
ENABLE_METRICS=true
METRICS_PORT=9091
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Wallet Configuration
WALLET_DEFAULT_CURRENCY=BRL
WALLET_INITIAL_CREDITS=100
WALLET_MIN_TOPUP_AMOUNT=1000
WALLET_MAX_TOPUP_AMOUNT=1000000

# Subscription Plans
PLAN_FREE_CREDITS_PER_MONTH=100
PLAN_STARTER_CREDITS_PER_MONTH=1000
PLAN_PROFESSIONAL_CREDITS_PER_MONTH=10000
PLAN_ENTERPRISE_CREDITS_PER_MONTH=100000

# Feature Flags
ENABLE_CREDIT_WALLET=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_INVOICING=false
ENABLE_PAYMENT_METHODS=true
