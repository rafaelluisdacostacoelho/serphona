# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8083
GRPC_PORT=9093
ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/serphona_agents?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=serphona_agents
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=agent-orchestrator
KAFKA_TOPICS=agents.events,conversations.events,decisions.events

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=serphona-auth
JWT_AUDIENCE=serphona-api

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Tools Gateway Integration
TOOLS_GATEWAY_URL=http://localhost:8085

# Billing Integration
BILLING_SERVICE_URL=http://localhost:8081
ENABLE_CREDIT_CONSUMPTION=true
CREDIT_COST_PER_REQUEST=1

# Observability Configuration
ENABLE_METRICS=true
METRICS_PORT=9093
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
ENABLE_CONVERSATION_TRACKING=true

# ClickHouse Configuration (for analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=serphona_analytics

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Agent Configuration
AGENT_MAX_CONCURRENT_CONVERSATIONS=100
AGENT_CONVERSATION_TIMEOUT=30m
AGENT_MAX_TURNS_PER_CONVERSATION=50
AGENT_ENABLE_MEMORY=true

# Feature Flags
ENABLE_VOICE_CALLS=false
ENABLE_TEXT_CHAT=true
ENABLE_TOOL_CALLING=true
ENABLE_SENTIMENT_ANALYSIS=true
